extends layout 

block content 
  h1 #{title}

  form(action="", method="POST")
    .form-group 
      label(for="name") Genre:
      - const v = genre ? genre.name : '' 
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=v) 
      button.btn.btn-primary(type="submit") Submit 

  if errors   
    ul 
      for error in errors 
        li!= error.msg 